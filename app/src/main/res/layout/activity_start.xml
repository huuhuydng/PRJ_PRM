<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burrgar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_2xl"
        android:layout_marginEnd="@dimen/spacing_2xl"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:fontFamily="@font/poppins_bold"
        android:text="Enjoy Restaurant Quality Meals \nat Home"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_3xl"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_lg"
        android:layout_marginStart="@dimen/spacing_3xl"
        android:layout_marginEnd="@dimen/spacing_3xl"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:background="@drawable/greenbuttongradient"
        android:text="@string/get_started"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xl"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        android:elevation="@dimen/elevation_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>